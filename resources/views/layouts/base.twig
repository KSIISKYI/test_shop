<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>TEST SHOP</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

	<link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
	{# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> #}

	<link rel="stylesheet" href="/css/style.css">
	<script src="https://kit.fontawesome.com/600e38d2f0.js" crossorigin="anonymous"></script>
	<script type="text/javascript" src="/js/main.js" defer></script>

    {% block headers %}
    {% endblock %}
</head>
<body>
	<div class="page">

		<div id="header">
			<a href="{{ route({'name': 'home'}) }}"><div class="logo">TEST SHOP</div></a>
			<div class="header-inner">
				<div class="header-inner-auth">
                    {% if getUser() %}
                        <a href="#"><p>{{ getUser().username }}</p></a>
                        <p>|</p>
                        <a href="{{ route({'name':'signout'}) }}"><p>Logout</p></a>
                    {% else %}
                        <a href="{{ route({'name':'signin'}) }}"><p>Sign In</p></a>
                        <p>|</p>
                        <a href="{{ route({'name':'signup'}) }}"><p>Sign Up</p></a>
                    {% endif %}
				</div>
				<div class="cart-demo">
					<a href="{{ route({'name': 'carts-show'}) }}"><i class="fa-solid fa-cart-shopping"></i></a>
						<div class="amount" id="cart_items_count" style="
							{% if getCart().cart_items %}
								">{{ getCart().cart_items|length }}</div>
							{% else %}
                                display:none;">0</div>
                            {% endif %}
				</div>
			</div>
		</div>
        {% block nav %}
            <div id="nav">
                <div class="nav-inner">
                    <a href="{{ route({'name': 'home'}) }}" class="category_link"><div class="nav-inner-element">All categories</div></a>
					{% for category in getCategories() %}
						<a class="category_link" href="{{ route({'name': 'products-filter', 'category_id': category.id}) }}">
							<div class="nav-inner-element">{{ category.name }}</div>
						</a>
					{% endfor %}
                </div>
            </div>
        {% endblock %}

		<div id="content">
			<div class="content-inner">
                    {% block content %}
                    {% endblock %}
			</div>
		</div>
		<div id="footer">wewew</div>
	</div>
	
</body>
</html>